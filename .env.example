# Solana Network Configuration
SOLANA_NETWORK=devnet
# Options: 'devnet' or 'mainnet-beta'
# For production, use 'mainnet-beta'

# Solana RPC URLs (optional - defaults to public RPCs)
# SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
# SOLANA_MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Server Wallet Configuration
# Generate with: node -e "const {Keypair} = require('@solana/web3.js'); const bs58 = require('bs58'); const kp = Keypair.generate(); console.log('Private:', bs58.encode(kp.secretKey)); console.log('Public:', kp.publicKey.toBase58());"
SERVER_WALLET_PRIVATE_KEY=your-base58-encoded-private-key-here
ADDRESS=your-solana-public-key-base58-here

# MongoDB Configuration
# Get from: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=ad-bid

# x402 Configuration
FACILITATOR_URL=https://x402.org/facilitator

# Auction Configuration
AUCTION_DURATION_MINUTES=5
STARTING_BID_USDC=1
BID_INCREMENT_USDC=1

# External Services
# Firecrawl API Key (for web scraping via x402)
# Get from: https://firecrawl.dev/
FIRECRAWL_API_KEY=your-firecrawl-api-key
# Optional: Custom x402-wrapped Firecrawl endpoint
# FIRECRAWL_WRAPPED_ENDPOINT=https://your-endpoint.com/api/firecrawl

# Freepik API Key (for AI image generation via x402)
# Get from: https://www.freepik.com/api
FREEPIK_API_KEY=your-freepik-api-key

# Webhook Configuration (for Freepik image generation callbacks)
# For local development, leave as is
# For production, set to your public URL (e.g., ngrok, Cloudflare Tunnel)
# WEBHOOK_URL=https://your-public-url.com/api/webhooks/freepik
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Webhook secret for Freepik webhook verification
# WEBHOOK_SECRET=your-webhook-secret
